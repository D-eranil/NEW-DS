@model DSWEBSITE_K13.Components.ViewComponents.TechnologyModel
@{ var technology = Model.Technology; }
<main>
    <div class="section technology-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading text-center content-wrap">
                        <h2>@technology.Title</h2>
                        <p>@technology.ContentText</p>
                    </div>
                    @{
                        var technologies = Model.Technologies;
                        @if (technologies != null && technologies.Count > 0)
                        {
                            <div class="technology-tabs text-center">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">

                                        @foreach (var item in technologies)
                                        {
                                            if (item.TechnologyDetails != null && item.TechnologyDetails.Count > 0)
                                            {
                                                <button class="nav-link" id="tab-@item.TechnologyName" data-bs-toggle="tab" data-bs-target="#nav-@item.TechnologyName" type="button" role="tab" aria-controls="nav-@item.TechnologyName" aria-selected="false">
                                                    <img src="@item.TechnologyImage" alt="@item.ImageAltText">
                                                    <span>@item.TechnologyName</span>
                                                </button>
                                            }
                                        }
                                    </div>
                                </nav>
                                <div class="tab-content" id="nav-tabContent">
                                    @{ var i = 0;}
                                    @foreach (var item in technologies)
                                    {
                                        string description = item.TechnologyDescription;
                                        var cls = i == 0 ? "active show" : "";

                                        if (item.TechnologyDetails != null && item.TechnologyDetails.Count > 0)
                                        {
                                            <div class="tab-pane fade technology-tab-layout2 @cls" id="nav-@item.TechnologyName" role="tabpanel" aria-labelledby="tab-@item.TechnologyName">
                                                <div class="technology-detail content-wrap">
                                                    <p>@description</p>
                                                    <div class="row">

                                                        @foreach (var innerItem in item.TechnologyDetails)
                                                        {
                                                            <div class="col-lg-6 col-md-6 mb-5">
                                                                <div class="technology-detail-list card h-100" style="background-image:url(@innerItem.BackgroundImage);">
                                                                    <img src="@innerItem.TechnologyLogo" alt="@innerItem.BackgroundImageAltText" title="@innerItem.TechnologyTitle">
                                                                    <p>@innerItem.ContentText</p>
                                                                </div>
                                                            </div>

                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        i++;
                                    }
                                </div>
                            </div>
                        }}
                </div>
            </div>
        </div>
    </div>
</main>