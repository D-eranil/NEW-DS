@model DSWEBSITE_K13.Components.ViewComponents.ClienteleContainerModel

<div class="client-says section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading text-center">
                    <h2>@Model.Heading</h2>
                </div>
                @if (Model.Clienteles != null && Model.Clienteles.Count > 0)
                {
                    <div class="testimonial-slider">
                        @foreach (var clientele in Model.Clienteles)
                        {
                            <div class="client-testimonial">
                                <div class="client-img float-lg-start">
                                    <img src="@clientele.ClientImage" alt="@clientele.ClientImageAltText">
                                </div>
                                <div class="float-lg-end client-comments content-wrap">
                                    <p>@clientele.ContentText</p>
                                    <span><small>-</small>@clientele.ClientDesignation, @clientele.ClientFullName, @clientele.ClientLocation</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>