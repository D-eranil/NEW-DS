<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title | Dotstark</title>*@
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    @RenderSection("metatags", required: false)

    @RenderSection("metatagspressrelease", required: false)

 
    @Html.Kentico().PageDescription()
    @Html.Kentico().PageKeywords()
    @Html.Kentico().PageTitle(ViewBag.Title as string)
    @{
        var favIcon = SettingsKeyInfoProvider.GetValue("FavIcon");
    }
    <link rel="icon" type="image/x-icon" href="@favIcon">
    @Html.Raw(SettingsKeyInfoProvider.GetValue("OGMetaTags"))

    @Html.Raw(SettingsKeyInfoProvider.GetValue("TwitterMetaTags"))

    @Html.Raw(SettingsKeyInfoProvider.GetValue("OtherMetaTags"))
  
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-163657772-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-163657772-1');
    </script>

    <page-builder-styles />
    <link rel="stylesheet" href="/assets/css/main.css?var=1.3">
</head>
<body>
    @await Component.InvokeAsync("Header")

    <main>
        @RenderBody()
    </main>

    <div class="chat-icon" style="display:none;">
        <a href="#"><img src="/assets/images/chat-icon.svg" alt="chat-icon"></a>
    </div>
    <div class="scroll-top-section">
        <button class="scroll-top" onclick="topFunction()" id="scroll-top"><img src="/assets/images/scroll-top-arrow.svg" alt="scroll-top-arrow"></button>
    </div>
    @await Component.InvokeAsync("Footer")

    <page-builder-scripts />
    <script src="/assets/js/bootstrap.js"></script>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/slick.js"></script>
    <script src="/assets/js/slider_script.js"></script>
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script src="/assets/js/custom.js"></script>
    @RenderSection("scripts", required: false)
    
    @await Component.InvokeAsync("DSConsent")
</body>
</html>
